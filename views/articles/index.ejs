<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
    <link rel="stylesheet" href="css/styles.css" type="text/css">
</head>
<body>
    <div class="container">
        <h1 class="title-blog">Blog Articles</h1>
        <a href="/articles/new" class="btn-newArt">New Article</a>

        <% articles.forEach(article => { %>
            <div class="card-art">
                <div class="card-body">
                    <h4 class="card-title">
                        <%= article.title %>
                    </h4>
                    <div class="card-date">
                        <%= article.createdAt.toLocaleDateString() %>
                    </div>
                    <div class="card-text">
                        <%= article.description %>
                    </div>
                    <div class="btn-container">
                        <a href="articles/<%= article.slug %>" class="btn-save-form">Read More</a>
                        <a href="articles/edit/<%= article.id %>" class="btn-edit">Edit</a>
                        <form action="/articles/<%= article.id %>?_method=DELETE" method="POST">
                            <button type="submit" class="btn-delete">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</body>
</html>